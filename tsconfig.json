{
  "compilerOptions": {
    "allowJs": true,
    "target": "es2015",
    "module": "commonjs",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [ "es2015", "dom"],
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "compileOnSave": true
  },
  "exclude": [
    "src/scripts/**/*.js"
  ],
  "files": [
    "src/scripts/controlKeys.ts",
    "src/scripts/Keyboard.ts",
    "src/scripts/main.ts"
  ]
}
