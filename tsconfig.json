{
  "compilerOptions": {
    "allowJs": true,
    "target": "es2015",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [ "es2015", "dom" ],
    "outFile": "main.js",
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "compileOnSave": true
  },
  "exclude": [
    "src/scripts/**/*.js"
  ],
  "include": [
    "src/scripts/*.ts"
  ]
}
